<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.rnikhithareddy.sing2.Home">

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="108dp"
        android:text="Take Picture"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1" />

    <TextView
        android:id="@+id/scan_results"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="44dp"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintLeft_toLeftOf="@+id/button"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1" />

    <EditText android:layout_height="wrap_content" android:layout_width="wrap_content" app:layout_constraintLeft_toLeftOf="@+id/Title" tools:layout_constraintLeft_creator="1" android:text="" android:id="@+id/Author" app:layout_constraintTop_toBottomOf="@+id/Title" android:layout_marginTop="35dp" tools:layout_constraintTop_creator="1" android:hint=" Author " android:inputType="textPersonName" android:ems="10"/>

    <EditText android:layout_height="wrap_content" android:layout_width="wrap_content" app:layout_constraintLeft_toLeftOf="parent" tools:layout_constraintLeft_creator="1" app:layout_constraintRight_toRightOf="parent" tools:layout_constraintRight_creator="1" android:text="" android:id="@+id/Title" android:layout_marginTop="116dp" tools:layout_constraintTop_creator="1" android:hint=" Title " android:inputType="textPersonName" android:ems="10" app:layout_constraintTop_toTopOf="parent"/>

    <Button android:layout_height="wrap_content" android:layout_width="wrap_content" app:layout_constraintLeft_toLeftOf="@+id/button" android:layout_marginBottom="43dp" tools:layout_constraintLeft_creator="1" app:layout_constraintBottom_toBottomOf="parent" tools:layout_constraintBottom_creator="1" android:text="AddBook" android:id="@+id/AddBook" android:layout_marginLeft="16dp" android:layout_marginStart="16dp" app:layout_constraintTop_toBottomOf="@+id/button" android:layout_marginTop="37dp" tools:layout_constraintTop_creator="1"/>

    <EditText
        android:id="@+id/genre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text|textPersonName"
        android:text="Genre"
        tools:layout_editor_absoluteX="84dp"
        tools:layout_editor_absoluteY="258dp" />
</android.support.constraint.ConstraintLayout>
